---
const links = [
  { name: "Inicio", href: "#home" },
  { name: "Sobre mí", href: "#about" },
  { name: "Proyectos", href: "#projects" },
  { name: "Contacto", href: "#contact" },
];

const social = [
  { name: "GitHub", href: "https://github.com/tuusuario" },
  { name: "LinkedIn", href: "https://linkedin.com/in/tuusuario" },
];
---

<header class="fixed top-0 left-0 w-full z-50 bg-transparent backdrop-blur-md">
  <div class="max-w-6xl mx-auto flex justify-between items-center p-4">
    <!-- Logo / Nombre -->
    <a href="#home" class="text-xl font-bold text-white hover:text-gray-300 transition-colors">
        Enrique Morcillo
    </a>

    <!-- Navegación -->
    <nav class="hidden md:flex gap-6 text-gray-200">
      {links.map(link => (
        <a
          href={link.href}
          class="hover:text-white transition-colors"
        >
          {link.name}
        </a>
      ))}
    </nav>

    <!-- Redes -->
    <div class="flex gap-4">
      {social.map(s => (
        <a
          href={s.href}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-300 hover:text-white transition-colors"
        >
          {s.name}
        </a>
      ))}
